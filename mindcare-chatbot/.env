# MindCare Mental Health Chatbot - Environment Variables
# Copy this file to .env and fill in your actual values

# ===========================================
# REQUIRED: Google Gemini AI Configuration
# ===========================================
# Get your API key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=AIzaSyB-57O1PPASDhUYZF1dm2hy-cIKA2quB-I

# ===========================================
# SERVER CONFIGURATION
# ===========================================
# Port for the server to run on (default: 3000)
PORT=3000

# Node environment (development/production)
NODE_ENV=development

# ===========================================
# OPTIONAL: DATABASE CONFIGURATION
# ===========================================
# If you plan to add conversation logging/analytics later
# DATABASE_URL=mongodb://localhost:27017/mindcare
# DB_NAME=mindcare

# ===========================================
# OPTIONAL: CORS CONFIGURATION
# ===========================================
# Allowed origins for CORS (comma-separated for multiple domains)
# CORS_ORIGIN=http://localhost:3000,https://yourdomain.com

# ===========================================
# OPTIONAL: RATE LIMITING
# ===========================================
# Rate limit settings (requests per window)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# OPTIONAL: LOGGING CONFIGURATION
# ===========================================
# Log level (error, warn, info, debug)
LOG_LEVEL=info

# ===========================================
# OPTIONAL: SECURITY HEADERS
# ===========================================
# Content Security Policy settings
CSP_ENABLED=false

# ===========================================
# OPTIONAL: ANALYTICS & MONITORING
# ===========================================
# If you want to add analytics later
# ANALYTICS_ENABLED=false
# SENTRY_DSN=your_sentry_dsn_here

